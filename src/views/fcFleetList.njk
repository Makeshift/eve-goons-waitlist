{% include "./partials/header.njk" -%}
{% include "./partials/nav.njk" %}
      <!-- Page Content -->
      <div class="page-content">
        <div class="page-header">
          <div class="container-fluid">
            <h2 class="h5 no-margin-bottom">Fleet Management</h2>
          </div>
        </div>
        <section class="no-padding-top no-padding-bottom">
          <div class="container-fluid">
            <div class="row">
              <!-- Create Fleet -->
              <div class="col-md-12 col-sm-12">
                <div class="statistic-block block">
                <form action="/commander" method="POST" role="form">
                  <div class="vertical-input-group">
                    <div class="input-group">
                      <span class="input-group-addon">Fleet Boss: Caitlin Viliana</span>
                      <input type="text" name="url" class="form-control" autocomplete="off" placeholder="https://esi.tech.ccp.is/v1/fleets/...../?datasource=tranquility" style="max-width:45%" autofocus required/>
                      <select name="type" class="form-control dropdown">
                        <option value="Vanguards">Vanguards</option>
                        <option value="Assaults">Assaults</option>
                        <option value="Headquarters" selected>Headquarters</option>
                      </select>
                      <button class="btn btn-success" type="submit"><i class="fas fa-edit"></i> Register</button>
                    </div>
                  </div>
                </form>
              </div>
            </div>
            <!-- Fleet List -->
            <div class="col-md-12 col-sm-12">
              <div class="statistic-block block">
                <div class="progress-details d-flex align-items-end justify-content-between">
                  <table class="table table-striped table-hover table-sm">
                    <thead>
                      <tr>
                        <th class="tr35"></th>
                        <th>Active FC</th>
                        <th>Backseat</th>
                        <th>Type</th>
                        <th>Status</th>
                        <th>Fleet Location</th>
                        <th>Size</th>
                        <th></th>
                      </tr>
                    </thead>
                  <tbody>
                    {% for fleet in fleets %}
                    <tr>
                      <td><img src="https://image.eveonline.com/Character/{{ fleet.fc.characterID}}_32.jpg" alt="FCs Avatar"></td>
                      <td><a href="javascript:void(0);" onclick="showInfo({{ fleet.fc.characterID }})">{{ fleet.fc.name }}</a></td>
                      <td><a href="javascript:void(0);" onclick="showInfo({{ fleet.backseat.characterID }})">{{ fleet.backseat.name }}</a>
                      <td>{{ fleet.type }}</td>
                      <td>{{ fleet.status }}</td>
                      <td><a href="javascript:void(0);" onclick="setWaypoint({{ fleet.fc.location.id }})">{{ fleet.fc.location.name }}</a></td>
                      <td>{{ fleet.members.length }}</td>
                      <td><a href="/commander/{{ fleet.id }}"><button class="btn btn-sm btn-info"><i class="fa fa-binoculars"></i></button></a></td>
                    </tr>
                    {% endfor %}
                  </tbody>
                </table>
                </div>
              </div>
            </div>
          </div>
          </div>
        </section>
{%- include "./partials/footer.njk" %}